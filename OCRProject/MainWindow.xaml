<rxui:ReactiveWindow x:Class="OCRProject.MainWindow"
					 x:TypeArguments="ViewModel:MainViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OCRProject"
					 xmlns:ViewModel="clr-namespace:OCRProject.ViewModel"
		xmlns:rxui="http://reactiveui.net"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		
		<TextBox x:Name="SearchBox" />

		<ListView Grid.Row="1" x:Name="SearchListBox" DisplayMemberPath="." />
	</Grid>
</rxui:ReactiveWindow>
